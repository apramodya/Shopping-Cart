<div class="row">
    {{# each products }}
        <div class="col-sm-6 col-md-4">
            <div class="card">
                <img class="card-img-top" src="{{ this.imagePath }}"
                     alt="Item Image">
                <div class="card-body">
                    <h5 class="card-title">{{ this.title }}</h5>
                    <p class="card-text">
                        {{ this.description }}
                    </p>
                    <div class="clearfix">
                        <p class="font-weight-bold float-left">Price: {{ this.price }}$</p>
                        <a href="#" class="btn btn-success float-right">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

